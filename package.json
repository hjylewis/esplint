{
  "name": "esplint",
  "version": "0.6.1",
  "description": "A ESLint warning tracker to help introduce rules into a legacy code base",
  "bin": "index.js",
  "scripts": {
    "release": "standard-version",
    "test": "jest"
  },
  "lint-staged": {
    "*.{js,json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hjylewis/esplint.git"
  },
  "keywords": [
    "eslint",
    "javascript",
    "linter"
  ],
  "author": "hjylewis",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/hjylewis/esplint/issues"
  },
  "homepage": "https://github.com/hjylewis/esplint#readme",
  "devDependencies": {
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-jest": "^21.17.0",
    "execa": "^0.10.0",
    "husky": "^2.4.1",
    "jest": "^24.8.0",
    "lint-staged": "^8.2.1",
    "prettier": "^1.13.6",
    "standard-version": "^6.0.1",
    "strip-ansi": "^5.0.0"
  },
  "peerDependencies": {
    "eslint": "4.x.x || 5.x.x"
  },
  "dependencies": {
    "chalk": "^2.4.1",
    "cosmiconfig": "^5.2.1",
    "figures": "^2.0.0",
    "lodash": "^4.17.11",
    "object-hash": "^1.3.0",
    "pkg-dir": "^3.0.0",
    "semver": "^6.1.1",
    "strip-json-comments": "^2.0.1",
    "yargs": "^13.2.1"
  },
  "engines": {
    "node": ">=8.1.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  }
}
